generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Chat {
  id String @id @default(uuid())

  Message       Message[]
  Channel       Channel?
  ChattersChats ChattersChats[]

  @@map("chats")
}

model MessageAttachment {
  id         String @id @default(uuid())
  name       String
  message_id String

  Message Message @relation(fields: [message_id], references: [id])

  @@map("message_attachments")
}

model Message {
  id                String   @id @default(uuid())
  text              String
  parent_message_id String?  @unique
  chat_id           String
  chatter_id        String
  sent_at           DateTime @default(now())

  parent_message    Message?            @relation("parent_message", fields: [parent_message_id], references: [id])
  Message           Message?            @relation("parent_message")
  chat              Chat                @relation(fields: [chat_id], references: [id])
  chatter           Chatter             @relation(fields: [chatter_id], references: [id])
  MessageAttachment MessageAttachment[]

  @@map("messages")
}

model Chatter {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  avatar_url String
  banner_url String
  is_online  Boolean @default(true)

  channels      Channel[]
  Message       Message[]
  ChattersChats ChattersChats[]

  @@map("chatters")
}

model ChattersChats {
  id         String @id @default(uuid())
  chatter_id String
  chat_id    String

  chatter Chatter @relation(fields: [chatter_id], references: [id])
  chat    Chat    @relation(fields: [chat_id], references: [id])

  @@map("chatter_chats")
}

model Channel {
  id          String  @id @default(uuid())
  name        String
  avatar      String
  invite_code String  @unique
  is_public   Boolean @default(true)
  owner_id    String
  chat_id     String  @unique

  owner Chatter @relation(fields: [owner_id], references: [id])
  chat  Chat    @relation(fields: [chat_id], references: [id])

  @@map("channels")
}
